.main-navigation, .main-footer
  background-color $color--grey
  border-top 1px solid $color--white
  border-bottom 1px solid $color--white
  display block
  width 100%
  -webkit-box-shadow 0 6px 11px 3px rgba(0, 0, 0, .4)
  -moz-box-shadow 0 6px 11px 3px rgba(0, 0, 0, .4)
  box-shadow 0 6px 11px 3px rgba(0, 0, 0, .4)

  &.main-footer
    -webkit-box-shadow 0 -6px 11px 3px rgba(0, 0, 0, .4)
    -moz-box-shadow 0 -6px 11px 3px rgba(0, 0, 0, .4)
    box-shadow 0 -6px 11px 3px rgba(0, 0, 0, .4)

  ul
    margin 0
    padding 0
    text-align center

    li
      list-style-type none
      display inline-block
      padding 10px

    a
      border-radius 50%
      border 2px solid $color--white
      background-color $color--blue
      display block
      font-family $font--arial
      width 40px
      height 40px
      color $color--white
      line-height 36px
      text-align center
      text-decoration none
      font-size 20px
      -webkit-transition background-color .35s /* Safari */
      transition background-color .35s
      &:hover
      &.active
        background-color $color--orange

.site-title
  display block
  width 670px
  height 371px
  margin 30px auto

  .site-logo
    background-image url('../images/htmlandcss.png')
    background-repeat no-repeat
    display block
    width 670px
    height 371px
